<Page
    x:Class="ChatTrialSolution.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ChatTrialSolution"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <!--<Grid>
    <TextBlock Text="Hello, world!" Margin="20" FontSize="30" />
    </Grid>-->

    <StackPanel Margin="30" Spacing="20">
        <TextBlock FontSize="30" Text="Chatting App" />
        <ComboBox Header="Fonts"
              ItemsSource="{Binding Streaming}"
              x:Name="font"
              SelectedItem="{Binding SelectedStream, Mode=TwoWay}" />

        <TextBlock
            x:Name="Msgread"
            Height="300"
            FontSize="20"
            SelectionHighlightColor="blue">
            received text message
        </TextBlock>
        <TextBox
            x:Name="MsgValue"
            Width="300"
            HorizontalAlignment="Left"
            FontSize="20"
            PlaceholderText="text message" />
        <Button
            x:Name="Button"
            Click="SendMsg_Click"
            Content="Send" />
    </StackPanel>
</Page>
